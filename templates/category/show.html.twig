{% extends "base.html.twig" %}

{% block title %}Category {{category.name}}{% endblock %}

{% block body %}
    <h1>Toutes les séries de la categorie {{category.name}}</h1>
    {% for program in programs %}
    <div>
        <h2>{{loop.index}} / {{program.title}} </h2>
        <p>{{ program.summary }}</p>
        {# Lien vers la fiche de la série :#}
        <a href="{{ path("program_show",{slug:program.slug})}}">Voir la fiche</a>
    </div>
    {% else %}
    Aucune série trouvée.
    {% endfor %}

    <a href="{{path('app_index')}}">
        Retour à l'acceuil
    </a>
{% endblock %}